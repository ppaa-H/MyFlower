@model Flower.Models.Members
@{
    ViewBag.Title = "个人信息";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<link href="~/Content/mss.css" rel="stylesheet" />
<form>
    <div>
        <div class="maintab">
            <h1 style="text-align:center;width:100%;height:50px;font-size:24px;">个人信息中心</h1>
            @Html.HiddenFor(m => m.MembersId)
            <table class="cantainer">
                <tr style="right:180px;">
                    <td colspan="3">
                        @*<input type="submit" value="编辑" style="width:80px;" onclick="return confirm('是否确定修改个人信息?')" />*@
                        <a href="/Personal/MenberEdit/@Model.MembersId" style="width:120px;text-decoration:none; float:right; line-height:50px;">点击进入修改页面</a>
                    </td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(m => m.MembersName)</td>
                    <td>
                        @Html.TextBoxFor(m => m.MembersName, new { @readonly = "readonly" })
                        @Html.ValidationMessageFor(m => m.MembersName)
                    </td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(m => m.MembersPwd)</td>
                    <td>
                        @Html.TextBoxFor(m => m.MembersPwd, new { @readonly = "readonly" })
                        @Html.ValidationMessageFor(m => m.MembersPwd)
                    </td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(m => m.Gender)</td>
                    @*<td>
                        @Html.TextBoxFor(m => m.Gender, new { @readonly = "readonly" })
                        @Html.ValidationMessageFor(m => m.Gender)
                    </td>*@
                    @if (Model.Gender == 0) { 
                      <td><input  type="text" value="男" readonly:readonly;/></td> 
                    }
                    @if (Model.Gender == 1) {
                    <td><input type="text" value="女" readonly:readonly; /></td>
                    }
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(m => m.Phone)</td>
                    <td>
                        @Html.TextBoxFor(m => m.Phone, new { @readonly = "readonly" })
                        @Html.ValidationMessageFor(m => m.Phone)
                    </td>
                </tr>
            </table>
        </div>
    </div>
</form>