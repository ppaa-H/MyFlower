@using Webdiyer.WebControls.Mvc;
@model PagedList<Flower.Models.Product>
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<script>
    function Detailed(id)
    {
        window.location.href = "/Home/Detailed?id=" + id + ""
    }

</script>
<div id="search"></div>
<section id="content" style="width:1000px;margin:100px auto;">
   @foreach (var item in Model)
    {
        <div class="frame" style="width:220px;height:320px;margin:10px 15px 20px 15px;float:left" onclick=Detailed(@item.ProductId)>
            <div style="width:100%;height:80%;"><img src="@item.Picture1" style="width:100%;height:100%;" /></div>
            <div class="name">@item.ProductName)</div>
            <div class="money" style="text-align:center;font-size:20px;">@item.NowPrice</div>
            @*<div class="language">@Html.DisplayFor(modelItem => item.FlowerLanguage)</div>*@
        </div>
    }
</section>
<section>
    <div>
        @Html.Pager(Model, new PagerOptions
           {
               PageIndexParameterName = "pageIndex",
               FirstPageText = "首页",
               PrevPageText = "上一页",
               NextPageText = "下一页",
               LastPageText = "末页",
           })
    </div>
</section>
<script>
    window.onload = function () {
        var a = document.getElementsByClassName('frame')
        var height = Math.ceil(a.length / 4) * 320
        $('#content').css("height", "" + height + "px")
    }
</script>